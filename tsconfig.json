
  {
    "include": ["src"], 

    "compilerOptions": {
      "jsx": "react",
      "allowJs": true,
      "sourceMap": true,
      "baseUrl": "./src",
      "module": "ESNext",
      "target": "ES2015",
      "outDir": "./dist/",
      "skipLibCheck": true,
      "noImplicitAny": false,
      "isolatedModules": true,
      "esModuleInterop": false,
      "moduleResolution": "node",
      "useDefineForClassFields": true,
      "allowSyntheticDefaultImports": true
    }
  }
